# Place this file in your /etc/yum.repos.d/ directory

[katello]
name=Katello 2.2
baseurl=https://fedorapeople.org/groups/katello/releases/yum/2.2/katello/@SUBDIR@/$releasever/$basearch/
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-katello
enabled=1
gpgcheck=1

# Pulp RPMs as supported by Katello - This is a coordinated
# copy of Pulp's packages in order to ensure compatibility
[katello-pulp]
name=Pulp Community Releases
baseurl=https://fedorapeople.org/groups/katello/releases/yum/2.2/pulp/@SUBDIR@/$releasever/$basearch/
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-katello
enabled=1
gpgcheck=1

# Candlepin RPMs as supported by Katello - This is a coordinated
# copy of Candlepin's packages in order to ensure compatibility

[katello-candlepin]
name=Candlepin: an open source entitlement management system.
baseurl=https://fedorapeople.org/groups/katello/releases/yum/2.2/candlepin/@SUBDIR@/$releasever/$basearch/
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-katello
enabled=1
gpgcheck=1

# source repositories

[katello-source]
name=Katello 2.2 Source
baseurl=https://fedorapeople.org/groups/katello/releases/source/2.2/katello/@SUBDIR@/$releasever/
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-katello
enabled=0
gpgcheck=1

[katello-pulp-source]
name=Katello Pulp source
baseurl=https://fedorapeople.org/groups/katello/releases/source/2.2/pulp/@SUBDIR@/$releasever/
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-katello
enabled=0
gpgcheck=1

[katello-candlepin-source]
name=Katello Candlepin source
baseurl=https://fedorapeople.org/groups/katello/releases/source/2.2/candlepin/@SUBDIR@/$releasever/
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-katello
enabled=0
gpgcheck=1
